//- Parallax bg for login page
mixin parallax(type)
	- var p_type = type || "axis"
	.parallax-wrapper
		ul#scene(class=p_type)
			- for (var n = 0; n < 6; n++)
				li.layer(data-depth=(0.2*n))
					div(class = "layer-bg layer-bg_" + n)

mixin cursor-plus
	a.cursor-area.preload-link#cursor-area(href="/")
	span.cursor-plus#cursor-plus
		span.circle


